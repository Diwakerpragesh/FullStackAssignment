@model IEnumerable<Crud_Api_Assignment.Models.Result>

<center><h1>Security Scan Result</h1></center>

<p>
    <button>@Html.ActionLink("Create New", "Create")</button>
</p>


<form asp-controller="CrudMvc" asp-action="Search" method="get">
    <p>
        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RepositoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QueuedAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ScanningAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FinishedAt)
        </th>


        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RepositoryName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.QueuedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScanningAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinishedAt)
            </td>

            <td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>


